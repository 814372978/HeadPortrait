/**
 * 公共图片样式，所有图片自适应处理
 */
image{
	width: 100%;
	height: 100%;
}

/**
 * container大容器
 */
.container{
	padding-top: 50px;
}

.bg{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100vh;
	z-index: -1;
	
}
.bg>image{
	width: 100%;
	height: 100%;
}

.topText{
	width: 70%;
	height: 180px;
	margin: 0 auto;
}

/**
 * 画布
 */
.canvasBox{
	margin-top: 20px;
	display: flex;
	justify-content: space-around;
	align-items: center;
	/* width: 100px;
	height:100px; */
	/* margin: 0 auto; */
}

.canvasBox .left,
.canvasBox .right{
	width: 40px;
	height: 40px;
}
.btnBox{
	display: flex;
	justify-content: space-around;
	align-items: center;
	margin-top:50px ;
}
